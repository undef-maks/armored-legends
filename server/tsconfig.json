{
  "compilerOptions": {
    "target": "ES2020",                          
    "module": "CommonJS",                       
    "lib": ["ES2020"],                           
    "rootDir": "..",                            
    "outDir": "dist",
    "skipLibCheck": true,                   
    "resolveJsonModule": true,               
    "baseUrl": ".",                        
    "paths": {
      "@shared/*": ["../shared/*"]        
    },
    "noImplicitAny": true,               
    "declaration": true,                
    "sourceMap": true                  
  },
  "include": ["src"],                            
  "exclude": ["node_modules", "dist"]           
}

